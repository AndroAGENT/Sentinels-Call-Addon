{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.samuel_hayden": {
			"initial_state": "idle",
			"states": {
				"idle": {
					"animations": ["idle"],
					"transitions": [
						{"move": "q.ground_speed > 1.0"}
					],
					"blend_transition": 0.2
				},
				"move": {
					"animations": ["move"],
					"transitions": [
						{"idle": "q.ground_speed < 0.5"}
					],
					"blend_transition": 0.2
				}
			}
		}
	}
}